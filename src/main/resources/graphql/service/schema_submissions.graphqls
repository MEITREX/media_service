type SubmissionExercise {
    assessmentId: UUID
    courseId: UUID!
    maxScore: Int!
    files: [File!]!
    solutions: [SubmissionSolution!]!
    tasks: [Task!]!
}

type File {
    id: UUID!
    uploadUrl: String!
    downloadUrl: String!
    name: String!
}

type Task {
    id: UUID!
    maxScore: Int!
}

type SubmissionSolution {
    id: UUID
    userId: UUID!
    submissionDate: DateTime!
    files: [File!]!
    result: Result!
}

type Result {
    id: UUID
    status: Status!
    results: [TaskResult!]!
}

type TaskResult {
    taskId: UUID!
    score: Int!
}

enum Status {
    pending,
    passed,
    failed
}

input InputResult {
    id: UUID!
    assessmentId: UUID!
    courseId: UUID!
    status: Status!
    results: [InputTaskResult!]!
}

input InputTaskResult {
    taskId: UUID!
    score: Int!
}

input InputSubmissionSolution {
    courseId: UUID!
    submissionExerciseId: UUID!
}

input InputSubmissionExercise {
    maxScore: Int!
    tasks: [InputTask]
}

input InputTask {
    assessmentId: UUID!
    maxScore: Int!
}
